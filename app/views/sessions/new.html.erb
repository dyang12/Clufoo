<div class="span4 center">
	<br><br>
	<div class="inner-body">
		<h3>Sign In</h3>

		<%= render :partial => "layouts/errors" %>

		<form action="<%= session_url %>" method="post" accept-charset="utf-8">
			<input type="hidden" 
						 name="authenticity_token"
						 value="<%= form_authenticity_token %>">
	
			<label for="user-username">Username: </label>
			<input type="text" name="user[username]"
						 value="<%= @user.username %>" id="user-username">
			<br>
	
			<label for="user-password">Password: </label>
			<input type="password" name="user[password]" id="user-password">
			<br>

			<p><input class="btn" type="submit" value="Sign In"></p>
		</form>

		<div>
		<%= link_to "Sign Up", new_account_url %>
		</div>
		
		<div>
		<a class="demo" href="">Demo Account</a>
		</div>
	</div>
</div>

<script>
	$(document).ready(function() {
		$('.demo').on('click', function(event) {
  		event.preventDefault();
			var user = {
				username: "guest",
				password: "password"
			}
			
			$.ajax({
				url: "/session",
				type: "post",
				data: {
					user: user
				},
				success: function(data) {
					window.location.replace("/forms");
				}
			});
		});
	});
</script>