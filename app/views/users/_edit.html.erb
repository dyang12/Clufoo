<div class="el-show">
	<h4 class= "el-title">Edit Profile</h4>
	<%= render :partial => "layouts/errors" %>

	<form action="<%= user_url(current_user) %>" method="post" accept-charset="utf-8">
		<input type="hidden" 
					 name="authenticity_token"
					 value="<%= form_authenticity_token %>">
	
		<input type="hidden" name="_method" value="put">
	
		<label for="user-username">Username: </label>
		<input type="text" name="user[username]"
					 value="<%= @user.username %>" id="user-username">
		<br>
	
		<label for="user-email">Email: </label>
		<input type="text" name="user[email]"
					 value="<%= @user.email %>" id="user-email">
		<br>
	
		<p><input class="btn" type="submit" value="Update Profile"></p>
	</form>
</div>